<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
    <item>
        <shape android:shape="oval">
            <!-- Change the color as per your requirement -->
            <solid android:color="#FF91E9"/> <!-- Default fill color -->
        </shape>
    </item>

    <!-- Border item (Optional) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/> <!-- Transparent for border only effect -->
            <stroke
                android:width="2dp"
                android:color="#000000"/> <!-- Border color and width -->
        </shape>
    </item>
</layer-list>
